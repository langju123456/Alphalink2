
{
  "entities": {
    "Invite": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invite",
      "type": "object",
      "description": "Represents an invitation code used by administrators to grant access to new members.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Invite entity."
        },
        "code": {
          "type": "string",
          "description": "The plain text invitation code."
        },
        "label": {
          "type": "string",
          "description": "A descriptive label or category for the invite (e.g., 'VIP Group', 'Twitter Promo')."
        },
        "role": {
          "type": "string",
          "description": "The role assigned to a user upon successful use of this invite code.",
          "enum": ["member", "admin"]
        },
        "status": {
          "type": "string",
          "description": "Current status of the invitation code.",
          "enum": ["active", "disabled"]
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the invitation code was created.",
          "format": "date-time"
        },
        "usedCount": {
          "type": "number",
          "description": "Number of times this invitation code has been used."
        }
      },
      "required": [
        "id",
        "code",
        "role",
        "status",
        "createdAt",
        "usedCount"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user profile within the AlphaLink system.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique user ID from Firebase Auth."
        },
        "role": {
          "type": "string",
          "description": "Assigned role of the user.",
          "enum": ["admin", "member"]
        },
        "accessCode": {
          "type": "string",
          "description": "The code used to gain access."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["uid", "role"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles and roles."
    },
    "/invites/{inviteId}": {
      "schema": { "$ref": "#/backend/entities/Invite" },
      "description": "Invitation codes for members."
    }
  }
}
