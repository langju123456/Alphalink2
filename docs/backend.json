
{
  "entities": {
    "Invite": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invite",
      "type": "object",
      "description": "Represents an invitation code used by administrators to grant access to new members.",
      "properties": {
        "id": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["member", "admin"]
        },
        "status": {
          "type": "string",
          "enum": ["active", "disabled"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "usedCount": {
          "type": "number"
        }
      },
      "required": ["id", "code", "role", "status", "createdAt"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user profile within the AlphaLink system.",
      "properties": {
        "uid": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "member"]
        },
        "accessCode": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["uid", "role"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles and roles."
    },
    "/invites/{inviteId}": {
      "schema": { "$ref": "#/backend/entities/Invite" },
      "description": "Invitation codes for members."
    }
  }
}
