rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * AlphaLink v2 Security Rules
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      allow delete: if isAdmin();
    }

    match /invites/{inviteId} {
      allow list: if isSignedIn();
      allow get, create, update, delete: if isAdmin();
    }

    match /tradeIdeas/{tradeIdeaId} {
      allow get, list: if isSignedIn();
      // Allow any signed-in user to create a trade idea (Forum style)
      allow create: if isSignedIn();
      // Allow admins to moderate, and owners to potentially edit/delete (if added later)
      allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);

      match /comments/{commentId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isExistingOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(resource.data.userId) || isAdmin();
      }

      match /likes/{userId} {
        allow get, list: if isSignedIn();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if false;
        allow delete: if isExistingOwner(userId);
      }
    }

    match /highlights/{highlightId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId}/messages/{messageId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}