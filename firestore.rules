
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Core Authorization Helpers ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Direct and robust Admin check
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- User Profiles ---

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can update their profile but NOT their role
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId && request.resource.data.role == resource.data.role);
      // Admin can delete any user
      allow delete: if isAdmin();
    }

    // --- Invitation System ---

    match /invites/{inviteId} {
      allow get, list: if isSignedIn();
      // Only admins can create, modify, or delete invite codes
      allow create, update, delete: if isAdmin();
    }

    // --- Trade Ideas / Research Feed ---

    match /tradeIdeas/{tradeIdeaId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      // Admin has absolute power; owners can manage their own
      allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);

      match /comments/{commentId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
      }

      match /likes/{userId} {
        allow get, list: if isSignedIn();
        allow create, delete: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Performance Highlights ---

    match /highlights/{highlightId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
    }

    // --- User-specific Chat Messages ---

    match /users/{userId}/messages/{messageId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
